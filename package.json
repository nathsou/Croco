{
  "name": "croco-lang",
  "version": "0.1.6",
  "description": "Basic purely functional programming language based on term rewriting",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "check": "tsc --noEmit",
    "build": "npm run check && npm run buildNoCheck",
    "buildNoCheck": "esbuild cli/croco.ts --bundle --platform=node --minify --outfile=dist/croco.js"
  },
  "dependencies": {
    "girafe": "^0.2.1",
    "nearley": "^2.19.6"
  },
  "devDependencies": {
    "@types/nearley": "^2.11.1",
    "@types/node": "^14.6.2",
    "esbuild": "^0.10.2",
    "typescript": "^4.0.2"
  },
  "keywords": [
    "TRS",
    "Functional",
    "Programming"
  ],
  "bin": {
    "croco": "./dist/croco.js"
  },
  "author": "Nathan Soufflet",
  "license": "MIT"
}
